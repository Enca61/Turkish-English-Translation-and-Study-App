<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/puzzle"
    tools:context=".bosluk_doldurma">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="218dp"
        android:layout_height="235dp"
        android:layout_marginStart="90dp"
        android:layout_marginEnd="89dp"
        android:layout_marginBottom="184dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent">

        <Button
            android:id="@+id/cevap_1"
            android:layout_width="213dp"
            android:layout_height="45dp"
            android:background="@drawable/buttonshape"
            android:text="Button"
            android:textColor="#FFFFFF"
            app:layout_constraintBottom_toTopOf="@+id/cevap_2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/cevap_2"
            android:layout_width="213dp"
            android:layout_height="45dp"
            android:layout_marginTop="14dp"
            android:background="@drawable/buttonshape"
            android:text="Button"
            android:textColor="#FFFFFF"
            app:layout_constraintStart_toStartOf="@+id/cevap_1"
            app:layout_constraintTop_toTopOf="parent" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/cevap_4"
            android:layout_width="213dp"
            android:layout_height="45dp"
            android:layout_marginTop="14dp"
            android:background="@drawable/buttonshape"
            android:text="Button"
            android:textColor="#FFFFFF"
            app:layout_constraintStart_toStartOf="@+id/cevap_3"
            app:layout_constraintTop_toBottomOf="@+id/cevap_3" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/cevap_3"
            android:layout_width="213dp"
            android:layout_height="45dp"
            android:layout_marginTop="14dp"
            android:background="@drawable/buttonshape"
            android:text="Button"
            android:textColor="#FFFFFF"
            app:layout_constraintStart_toStartOf="@+id/cevap_2"
            app:layout_constraintTop_toBottomOf="@+id/cevap_2" />

    </LinearLayout>

    <TextView
        android:id="@+id/text3"
        android:layout_width="387dp"
        android:layout_height="152dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/beyaz"
        android:text="Soru Kelimesi"
        android:textAlignment="textStart"
        android:textColor="@color/darkbl"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/sonraki_soru"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="46dp"
        android:background="@drawable/buttonshape"
        android:text="Sonraki Soru"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</android.support.constraint.ConstraintLayout>